{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "prCreation": "immediate",
  "extends": ["config:recommended"],
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "schedule": ["at any time"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "enabled": true,
      "prCreation": "immediate"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "actions/setup-python",
      "versioningTemplate": "pep440",
      "matchStrings": [
        // Match the python-version input
        "python-version:\\s*(?<currentValue>\\d+\\.\\d+)",

        // Match & update name labels like: "Set up Python 3.11"
        "Set up Python\\s+(?<currentValue>\\d+\\.\\d+)"
      ]
    }
  ]
}
